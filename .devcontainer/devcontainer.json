
{
	"name": "Embedded Programming Container",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"INSTALL_MAVEN": "false",
			"INSTALL_GRADLE": "false",
			"INSTALL_NODE": "false",
			"NODE_VERSION": "lts/*",
			"USERNAME":"${localEnv:USER}",
			"UID":"1000",//atualize para o uid do teu usu√°rio
			"GID":"1000",
			"GROUPNAME":"${localEnv:USER}"
		}
	},
	"runArgs": ["--privileged"], //precisa para acessar os dispositivos usb

	// Set *default* container specific settings.json values on container create.
	"settings": { 
		"java.jdt.ls.java.home": "/usr/lib/jvm/java",
		"java.configuration.runtimes": [{
			"default": true,
			"name": "JavaSE-11",
			"path": "/usr/lib/jvm/java"
		}]
	},
	
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"mhutchie.git-graph",
		"eamodio.gitlens",
		"gruntfuggly.todo-tree",
		"vscode-snippet.snippet",
		"spmeesseman.vscode-taskexplorer",
		"ms-vscode.cpptools-extension-pack",
		"austin.code-gnu-global",
		"cheshirekow.cmake-format",
		"ms-python.python",
		"vadimcn.vscode-lldb",
		"ms-vscode.makefile-tools",
		"marus25.cortex-debug",
		"Swellaby.rust-pack",
		"tomoki1207.pdf",
		"marus25.cortex-debug-dp-stm32f4"
	],

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "java -version",
	"remoteEnv": {"DISPLAY":"${localEnv:DISPLAY}"},

	"mounts": ["source=${localEnv:HOME}/.ssh,target=${localEnv:HOME}/.ssh,type=bind,consistency=cached",
		       "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
//		       "source=/dev/dri,target=/dev/dri,type=bind",
			   "source=/dev,target=/dev,type=bind,consistency=cached",
			   "source=/etc/group,target=/etc/group,type=bind,consistency=cached",
			   "source=/etc/passwd,target=/etc/passwd,type=bind,consistency=cached",
			   "source=/etc/shadow,target=/etc/shadow,type=bind,consistency=cached"],			   
	"remoteUser": "${localEnv:USER}"
}
